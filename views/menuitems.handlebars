{{!-- Create a table --}}
<table id='menu-table'>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.menuID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.itemCategory}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}

<h3>Add New Menu Item</h3>
<form id="add-menuitem-form-ajax">
    <label for="input-name">Item Name </label>
    <input type="text" name="item-name" id="input-fname">
    
    <label for="input-price">Price </label>
    <input type="number" name="price" id="input-lname">

    <label for="input-category">Item Category</label>
    <input type="text" name="item-catagory" id="input-homeworld">

    <input type="submit">
</form>

